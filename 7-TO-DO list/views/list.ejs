<%- include('header') -%>

    <body>
        <div class="box" id="heading">

            <h1>
                <%= currentday %>
            </h1>
        </div>


        <div class="box">

            <% newtask.forEach(function(i){ %>
                <form action="/delete" method="post">

                    <div class="item">
                        <input type="checkbox" value="<%= i._id %>" name="checkbox" onChange="this.form.submit()">
                        <p>
                            <%= i.name %>
                        </p>
                    </div>

                </form>

                <% }) %>



                    <form class="item" action=<%= actionValue %> method="post">
                        <input type="text" name="task" placeholder="Enter Task" autocomplete="off">
                        <button type="submit">+</button>
                    </form>

        </div>




        <script type="module" src="app.js"></script>

        <%- include('footer') -%>